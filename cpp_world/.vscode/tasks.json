{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build-cmake",
            "command": "cd build; rm -rf *; cmake -G Ninja ..; ninja",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "build-debug-cmake",
            "command": "cd build;  rm -rf *; cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug ..; ninja",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}